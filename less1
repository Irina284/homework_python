
time = int(input("Введите время в секундах: "))
# 60 секунд * 60 минут = 3600  
print("Ваше время = %d часов, %d минут, %d секунд" % (time // 3600, time // (3600*3600), time % 60))


#--------------------------
n=input('Введите целое число от 0 до 9: ')

print("Сумма чисел n + nn + nnn :", int(n) + int(n+n)+ int(n+n+n))

#--------------------------
inp_string=input('Введите целое положительное число: ')
n=len(inp_string) # Нашли длину строки
max_int=0 # Максимальная цифра

while n>=0 : # цикл по количеству символов
    n=n - 1
    if max_int < int(inp_string[n]) :
        max_int=int(inp_string[n])
print("Самая большая цифра в числе :", max_int)

#--------------------------
inp_revenue = int(input('Введите значение выручки: '))
inp_expenses = int(input('Введите значение издержек: '))
# Определить с каким финансовым результатом работает фирма.
if inp_expenses != 0:
    result = inp_revenue / inp_expenses
else:
    result=inp_revenue
if result >= 1:
    print("Прибыль")
    # Если фирма отработала с прибылью, вычислите рентабельность выручки.
    print("Рентабельность выручки %.4f" % result)
    inp_staff = int(input('Введите численность сотрудников фирмы: '))
    print("Прибыль фирмы в расчёте на одного сотрудника %.2f" % (inp_revenue / inp_staff))
else :
	print("Убыток")

#--------------------------
#  Спортсмен занимается ежедневными пробежками. 
#  В первый день его результат составил a километров. 
#  Каждый день спортсмен увеличивал результат на 10% относительно предыдущего. 
#  Требуется определить номер дня, на который результат спортсмена 
#  составит не менее b километров.
#  Программа должна принимать значения параметров a и b и выводить одно натуральное число — номер дня.
day_result = float(input('Введите значение результата первого дня: '))
search_result = float(input('Введите значение достигаемого результата: '))

search_day = 1
while (day_result < search_result) :
    search_day = search_day + 1
    day_result = day_result *1.1
    if search_day >365:
        break
print("Номер дня, на который результат спортсмена достигнет нужный результат: ", search_day)
